<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border">
    
<TextView android:id="@+id/history_value"
	    android:layout_width="wrap_content"
	    android:text="Test"
     	android:layout_height="wrap_content"
     	android:paddingRight="5sp"
     	android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/border"
     	android:textAppearance="?android:attr/textAppearanceLarge"/>
<RelativeLayout 
    android:layout_toRightOf="@+id/history_value"
    android:layout_alignParentRight="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     	>
	<TextView android:id="@+id/history_comment"
	    android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:layout_alignParentRight="true"
     	android:text="Test"
     	android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="right"/>    
     <TextView android:id="@+id/history_date"
	    android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:layout_below="@id/history_comment"
     	android:layout_alignParentRight="true"
     	android:text="Test"
     	android:textAppearance="?android:attr/textAppearanceSmall"/>
     </RelativeLayout> 
</RelativeLayout>